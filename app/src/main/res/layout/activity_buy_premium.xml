<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackgroundColor"
    tools:context=".BuyPremiumActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StoryFlix Premium"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/mainTextColor"
                android:textStyle="bold"
                android:textSize="14sp"
                android:alpha="0.5"/>


            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="200.00 LKR"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FF8A30"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Cancel the subscription any time you want"
                android:layout_marginTop="30dp"
                android:textColor="@color/secondTextColor"
                android:alpha="0.6"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit/Debit Card"
                android:layout_marginTop="40dp"
                android:textColor="@color/secondTextColor"
                android:textStyle="bold"
                android:alpha="0.8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/purchaseGoogle"
                android:text="Purchase"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00CC8B"
                android:textColor="@color/white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialog (SIM)"
                android:layout_marginTop="30dp"
                android:textColor="@color/secondTextColor"
                android:textStyle="bold"
                android:alpha="0.8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/purchaseDialog"
                android:text="Coming Soon"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#C1C1C1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobitel (SIM)"
                android:layout_marginTop="30dp"
                android:textColor="@color/secondTextColor"
                android:textStyle="bold"
                android:alpha="0.8"
                android:textSize="20sp" />

            <Button
                android:text="Coming Soon"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#C1C1C1"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hutch / Airtel (SIM)"
                android:layout_marginTop="30dp"
                android:textColor="@color/secondTextColor"
                android:textStyle="bold"
                android:alpha="0.8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/purchaseHutch"
                android:text="Coming Soon"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#C1C1C1"
                android:textColor="@color/white"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>